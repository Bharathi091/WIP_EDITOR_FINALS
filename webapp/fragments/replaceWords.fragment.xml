<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:m="sap.m">
	<m:Dialog contentWidth="700px" contentHeight="300px" draggable="true" id="replaceWords" title="{i18n>replaceWords}" xmlns="sap.ui.table">
		<m:Table id="bottomTable0" noDataText="{i18n>NoDataText}">
			<m:columns>
				<m:Column width="10rem">
					<m:Label text="{i18n>Replace}" design="Bold"/>
				</m:Column>
				<m:Column width="10rem">
					<m:Label text="{i18n>ReplaceWith}" design="Bold"/>
				</m:Column>
				<m:Column width="5rem">
					<m:Label text="{i18n>default}" design="Bold"/>
				</m:Column>
				<m:Column width="5rem">
					<m:Label text="{i18n>Word}" design="Bold"/>
				</m:Column>
				<m:Column width="5rem">
					<m:Label text="{i18n>Add}" design="Bold"/>
				</m:Column>
			</m:columns>
			<m:items>
				<m:ColumnListItem>
					<m:cells>
						<m:Input id="replaceTxt"/>
						<m:Input id="replacewith"/>
						<m:CheckBox text="" selected="true" id="default"/>
						<m:CheckBox text="" selected="true" id="word"/>
						<core:Icon src="sap-icon://add-document" press="addToReplace"></core:Icon>
					</m:cells>
				</m:ColumnListItem>
			</m:items>
		</m:Table>
		<Table rows="{MatterModel>/replaceItems}" id="replaceTable" selectionMode="Single" visible="false">
			<columns>
				<Column width="11rem">
					<m:Label text="{i18n>Replace}"/>
					<template>
						<m:Input value="{MatterModel>word}"/>
					</template>
				</Column>
				<Column width="11rem">
					<m:Label text="{i18n>ReplaceWith}"/>
					<template>
						<m:Input value="{MatterModel>replace}"/>
					</template>
				</Column>
				<Column width="11rem">
					<m:Label text="{i18n>default}"/>
					<template>
						<m:CheckBox selected="{MatterModel>isSelect}"/>
					</template>
				</Column>
				<Column width="11rem">
					<m:Label text="{i18n>Word}"/>
					<template>
						<m:CheckBox selected="{MatterModel>isSelectWord}"/>
					</template>
				</Column>
				<Column width="11rem">
					<m:Label text=""/>
					<template>
						<core:Icon src="sap-icon://delete" press="deleteRow"></core:Icon>
					</template>
				</Column>
			</columns>
		</Table>
		<m:beginButton>
			<m:Button type="Default" text="{i18n>ReplaceSelected}" press="ReplaceSelected"/>
			<!--<m:Button type="Default" text="{i18n>ReplaceAll}" press="DialogClosedWithOk"/>-->
		</m:beginButton>
	
		<m:endButton>
			<m:Button type="Default" text="{i18n>Cancel}" press="DialogClosedWithOk"/>
		</m:endButton>
	</m:Dialog>
</core:FragmentDefinition>