<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:m="sap.m">
	<Dialog title="Modify/Reverse">
		<l:Grid defaultSpan="L12 M12 S12" width="auto" id="idGrid">
			<l:content>
				
				<f:SimpleForm id="replaceform" height="20%" width="100%" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" 
					labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" singleContainerFullSize="true">
					<f:content>
					
						<Label text="Document no" design="Bold"/>
						<Input editable="false" type="Number" enabled="false" width="30%" id="Belnr" value="{JSONModel>/Belnr}"/>
						
						<Label text="Original Hours" design="Bold"/>
						<Input editable="false" type="Number" enabled="false" width="20%" id="Megbtr" value="{JSONModel>/Megbtr}" />
						<Input editable="false"  enabled="false" width="20%" id="HR" value="HR" />
						
						<Label text="New Hours" design="Bold"/>
						<Input width="20%" type="Number" id="newHours" />
					</f:content>
				</f:SimpleForm>
			</l:content>
		</l:Grid>
		<buttons>
			<Button text="Cancel" press="closeModifyDialog" />
			<Button text="Save" press="ModifyReverseSave" type="Accept"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>